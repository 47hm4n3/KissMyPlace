<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/addProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="20sp"
            app:fabSize="auto"
            app:backgroundTint="@color/colorPrimary"
            app:srcCompat="@drawable/ic_action_face" />

        <Switch
            android:id="@+id/playMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30sp"
            android:text="Country Mode"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/myImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/addProfile"
            android:contentDescription="@string/world_map"
            android:src="@drawable/world_map" />

        <Button
            android:id="@+id/noviceBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/myImage"
            android:layout_centerHorizontal="true"
            android:text="@string/play_novice"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/mediumBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/noviceBtn"
            android:layout_centerHorizontal="true"
            android:text="@string/play_medium"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/expertBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mediumBtn"
            android:layout_centerHorizontal="true"
            android:text="@string/play_expert"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <Button
            android:id="@+id/scoresBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/expertBtn"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/scores"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

    </RelativeLayout>

</LinearLayout>
